@model BAPA_LMS.Models.UploadViewModels.DocumentDeleteViewModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">Är du säker på att du vill ta bort dokumentet <span class="alert-danger">@Html.DisplayFor(model => model.Name)</span> ?</h4>
</div>

@using (Ajax.BeginForm("delete", null,
                            new AjaxOptions
                            {
                                HttpMethod = "post",
                                InsertionMode = InsertionMode.Replace,
                                UpdateTargetId = "popupContent"
                            }, new { id = "formPopup" }))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("result", TempData["alert"], new { id = "popupResult" })
    <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal">Avbryt</button>
        <input type="submit" value="Ta bort dokument" class="btn btn-danger" />
    </div>
}
<script>
    teacher.initPopup();
</script>
