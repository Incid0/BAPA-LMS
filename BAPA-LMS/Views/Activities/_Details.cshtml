@model BAPA_LMS.Models.ActivityViewModels.ActivityDetailViewModel
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">@Html.DisplayFor(model => model.Name)</h4>
    <span>@Html.DisplayNameFor(model => model.ModuleName) @Html.DisplayFor(model => model.ModuleName)</span>
</div>
<div class="modal-body">
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Type)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Type.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StartDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.StartTime)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StartTime)
        </dd>

        @if (Model.StartDate.Date != Model.EndDate.Date)
        {
            <dt>
                @Html.DisplayNameFor(model => model.EndDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.EndDate)
            </dd>
        }

        <dt>
            @Html.DisplayNameFor(model => model.EndTime)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EndTime)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
            <br />
            <br />
        </dd>
     
        @if (Model.Files.Any())
        {
            <dt>
                @Html.DisplayNameFor(model => model.Files)
            </dt>
            <dd>
                @foreach (var file in Model.Files.Where(f => f.CourseName == null))
                {
                    <span>@file.Name</span> @:&nbsp;
                    <a class="btn btn-default btn-sm" href="@Url.Action("DownloadFile", "UploadDocument", new { id = file.Id })">
                        <span class="glyphicon glyphicon-floppy-save"></span>
                    </a><br />
                }
            </dd>
        }
    </dl>
</div>