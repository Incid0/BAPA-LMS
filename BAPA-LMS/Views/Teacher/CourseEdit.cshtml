@model BAPA_LMS.Models.CourseViewModels.CourseIndexViewModel
@{
    ViewBag.Title = "Kurseditor";
}

<h2>Kurseditor - @(Model.Name)</h2>

<div class="row">
    <div id="tree" data-id="@Model.Id" class="col-md-4">

    </div>
    <div class="col-md-8">
        <div id="editarea">

        </div>
        <div class="buttonbar">
            @Html.ActionLink("Lägg till kursdeltagare", "Register", new { id = Model.Id }, new { @class = "btn btn-default" })
            <button class="btn btn-default add" data-controller="modules">Ny modul</button>
            <button id="btnActivity" class="btn btn-default add" data-controller="activities" disabled="disabled">Ny aktivitet</button>
            <button id="btnDel" class="btn btn-default" href="">Ta bort</button>
        </div>
    </div>
</div>