@model BAPA_LMS.Models.CourseViewModels.CourseListViewModel

@helper SortHeader(string fieldname, string labelname)
{
    @Html.Raw((Model.SortParam == fieldname ? "<span class=\"glyphicon glyphicon-triangle-bottom\"></span>&nbsp;" : ""))
    @Html.Raw((Model.SortParam == fieldname + "_desc" ? "<span class=\"glyphicon glyphicon-triangle-top\"></span>&nbsp;" : ""))
    @Ajax.ActionLink(labelname, "Index",
                    new { filter = Model.Filter, sort = fieldname + (Model.SortParam == fieldname ? "_desc" : "") },
                    new AjaxOptions
                    {
                        HttpMethod = "get",
                        InsertionMode = InsertionMode.Replace,
                        UpdateTargetId = "courseList"
                    })
}


<div id="courseList">
    <p>Antal träffar: @Model.Courses.Count()</p>
    <input type="hidden" name="sort" value="@Model.SortParam" />
    <table class="table table-striped table-responsive">
        <tr>
            <th>
                @SortHeader("Name", Html.DisplayNameFor(model => model.Courses.FirstOrDefault().Name).ToString())
            </th>
            <th>
                @SortHeader("StartDate", Html.DisplayNameFor(model => model.Courses.FirstOrDefault().StartDate).ToString())
            </th>
            <th>
            </th>
        </tr>
        @foreach (var item in Model.Courses)
        {
            <tr>
                <td>
                    <a href="@Url.Action("CourseEdit", "Teacher", new { id=item.Id})">@Html.DisplayFor(modelItem => item.Name)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                    
                </td>
                <td>
                    @Html.ActionLink("Inlämningsuppgifter", "ActivityUploads", new { id = item.Id })
                </td>
            </tr>
        }
    </table>


</div>
