@model BAPA_LMS.Models.CourseViewModels.CourseListViewModel

@{
    ViewBag.Title = "Kurser";
}

<div id="courses">
    <div class="panel panel-default">
        @using (Ajax.BeginForm(null, null,
            new AjaxOptions
            {
                HttpMethod = "get",
                InsertionMode = InsertionMode.Replace,
                UpdateTargetId = "courseList"
            },
            new { @class = "form-inline" }))
        {
            <div class="panel-heading">Panel heading</div>
            <div class="panel-body">
                <div class="form-group">
                    @Html.LabelFor(model => model.Filter, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Filter, new { htmlAttributes = new { id = "coursefilter", @class = "form-control" } })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.StartRange, "Sökspann:", htmlAttributes: new { @class = "control-label" })
                    <div class="input-daterange input-group " data-provide="datepicker">
                        @Html.EditorFor(model => model.StartRange, new { htmlAttributes = new { @class = "form-control ", placeholder = "åååå-mm-dd" } })
                        <span class="input-group-addon">till</span>
                        @Html.EditorFor(model => model.EndRange, new { htmlAttributes = new { @class = "form-control", placeholder = "åååå-mm-dd" } })
                    </div>
                </div>
                @Html.ActionLink("Lägg till lärare", "RegisterTeacher", null, new { @class = "btn btn-default" })
                @Html.ActionLink("Lägg till kurs", "Create", "Courses", null, new { @class = "btn btn-default" })
            </div>
            @Html.Partial("_TeacherIndex", Model)
        }
    </div>
</div>
<div id="courseeditor">
    <h2><a id="btnReturn" data-toggle="tooltip" data-placement="bottom" title="Tillbaka till kurslistan"><span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span></a>Kurseditor - <span id="coursename">Placeholder</span></h2>

    <div class="row">
        <div id="tree" data-id="0" class="col-md-4">

        </div>
        <div class="col-md-8">
            <div class="editarea-fixed">
                <div id="editarea">

                </div>
                <div class="buttonbar">
                    @Html.ActionLink("Lägg till kursdeltagare", "Register", new { id = 0 }, new { @class = "btn btn-default" })
                    <button id="btnModule" class="btn btn-default add" data-controller="modules" data-parent="0">Ny modul</button>
                    <button id="btnActivity" class="btn btn-default add" data-controller="activities" disabled="disabled">Ny aktivitet</button>
                    <button id="btnDel" class="btn btn-danger" data-toggle="modal" data-target="#modalContainer" href="" disabled="disabled">Ta bort</button>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="modalContainer" class="modal" tabindex="-1" role="dialog">
    <div id="popupContent" class="modal-content">
    </div>
</div>